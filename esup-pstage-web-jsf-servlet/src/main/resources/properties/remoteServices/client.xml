<?xml version="1.0" encoding="UTF-8"?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
	http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<!-- HTTP INVOKER -->
	<bean id="remoteServices" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
	    <property name="serviceUrl" value="${pstagedata.serviceUrl}"/>
	    <property name="serviceInterface" value="org.esupportail.pstagedata.remote.RemoteServices"/>
	</bean>
	
	<!-- CXF -->
	<!--<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	
	<jaxws:client id="remoteServices" 
		serviceClass="org.esupportail.pstagedata.remote.RemoteServices"
		address="${pstagedata.serviceUrl}" />-->
		
	<!-- bean WS APOGEE -->
	
	<bean id="remoteCriApogeeEns"
		lazy-init="true"
		class="org.codehaus.xfire.spring.remoting.XFireClientFactoryBean">
		<property name="serviceClass" value="org.esupportail.apogee.services.remote.ReadEnseignement" />
		 <property name="wsdlDocumentUrl" value="${remoteCriApogeeReadEnseignement.serviceUrl}" />
		<property name="lookupServiceOnStartup" value="false" />
	</bean>
	
</beans>