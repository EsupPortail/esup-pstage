<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/web/converters.xml
		This file declares the converters used by the web interface.
		It should not be modified but by the developers.
		This file is referenced by /properties/applicationContext.xml.
	-->
	
	<bean id="rechercheStructurePaginator" class="org.esupportail.pstage.web.paginators.RechercheStructurePaginator"
		scope="session">
		<property name="defaultPageSize" value="20"/>
	</bean>
	
	<bean id="rechercheOffrePaginator" class="org.esupportail.pstage.web.paginators.RechercheOffrePaginator"
		scope="session">
		<property name="defaultPageSize" value="20"/>
	</bean>
	
	<bean id="rechercheConventionPaginator" class="org.esupportail.pstage.web.paginators.RechercheConventionPaginator"
		scope="session">
		<property name="defaultPageSize" value="20"/>
	</bean>
	
</beans>
